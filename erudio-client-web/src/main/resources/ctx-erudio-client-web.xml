<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<context:component-scan base-package="br.com.erudio.client.web" />

	<bean id="services" class="org.springframework.remoting.rmi.RmiProxyFactoryBean">
		<property name="serviceUrl" value="rmi://192.168.2.2:1099/remote-service" />
<!-- 		<property name="serviceUrl" value="rmi://localhost:1099/remote-service" /> -->
		<property name="serviceInterface" value="br.com.erudio.client.utils.service.interfaces.IServices" />
		<property name="refreshStubOnConnectFailure" value="false" />
	</bean>
</beans>
